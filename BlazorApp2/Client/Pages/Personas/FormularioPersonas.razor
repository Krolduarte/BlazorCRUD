

<EditForm Model="@Persona" OnValidSubmit="@OnValidSubmit">
    <div class="form-field">
        <label>Nombre:</label>

        <div>
            <InputText @bind-Value="@Persona.Nombre"></InputText>
            <ValidationMessage For="@(() =>Persona.Nombre)"></ValidationMessage>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-success">@TextoBoton</button>
    <DataAnnotationsValidator />

</EditForm>

@code {
    [Parameter] public Persona Persona { get; set; }
    [Parameter] public String TextoBoton { get; set; } = "Salvar Cambios";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
